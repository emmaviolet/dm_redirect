{
  "manifest_version": 4,
  "name": "DM Redirect",
  "description": "Blocks selected sites by redirecting to another site of your choice.",
  "version": "0.7",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup" : "popup.html",
    "default_icon": "redirect_icon.png"
  }
}